{
  "name": "qmims",
  "version": "0.0.1",
  "description": "AI-Powered README Generation & Editing using Amazon Q",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "qmims": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && pnpm run copy-templates",
    "copy-templates": "xcopy /E /I /Y \"src\\templates\" \"dist\\templates\"",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:lenient": "jest --testPathIgnorePatterns=dist --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "cli",
    "ai",
    "readme",
    "amazon-q",
    "documentation"
  ],
  "author": "Wassim Soltani",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/execa": "^2.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.17",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "execa": "^5.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "conf": "^10.2.0",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
